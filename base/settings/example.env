# Django Environment Variables Template
# Copy this file to .env and replace the placeholders with actual values

# Security Settings
SECRET_KEY=<your_secret_key>  # Required for Django's cryptographic signing

# Email Configuration
EMAIL_BACKEND='django.core.mail.backends.smtp.EmailBackend'
EMAIL_HOST=<smtp_host>  # e.g., smtp.gmail.com
EMAIL_PORT=<smtp_port>  # e.g., 587 for TLS
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<your_email>  # Sender's email address
EMAIL_HOST_PASSWORD=<app_specific_password>  # App password, not regular email password
